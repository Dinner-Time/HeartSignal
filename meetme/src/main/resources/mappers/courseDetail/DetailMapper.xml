<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hs.meetme.coursedetail.mapper.DetailMapper">

	<select id="getCourse" resultType="DetailVO">
		SELECT c.COURSE_NAME, c.REGION, o.AVG_COST
		FROM course c JOIN course_order o
		ON c.COURSE_ID = o.COURSE_ID
	</select>
	
